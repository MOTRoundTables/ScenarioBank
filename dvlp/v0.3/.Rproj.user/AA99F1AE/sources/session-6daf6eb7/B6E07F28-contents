


# simple map = 1 year, 1 var, values
createSimpleMap <- function(aFrcst, aScn, aYr, aVar) {  # 2 create map op population for one scenario
  
  cat(paste0(aFrcst, aScn, aYr, aVar))

  filtered <- aFrcst$tazdata %>% as_tibble() %>% filter(Scenario == scens[afrcst], Year == aYr)
  with_geoms <- filtered %>% left_join(aFrcst$geolyr,by = setNames(y_join,x_join)) %>% st_sf()

  # 3 mapview population of scenario
  basemap$mapview +
    mapview(with_geoms,zcol = pop_col_name)
  basemap$mapview
  
}


